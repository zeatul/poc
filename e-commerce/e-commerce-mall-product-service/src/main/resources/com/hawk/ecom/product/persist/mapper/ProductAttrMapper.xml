<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hawk.ecom.product.persist.mapper.ProductAttrMapper">

	<sql id="columns">	
				id AS "id" ,
		product_id AS "productId" ,
		sku_id AS "skuId" ,
		attr_name_id AS "attrNameId" ,
		attr_value_id AS "attrValueId" ,
		attr_name_type AS "attrNameType" ,
		create_user_code AS "createUserCode" ,
		create_date AS "createDate" ,
		update_user_code AS "updateUserCode" ,
		update_date AS "updateDate" ,
		delete_user_code AS "deleteUserCode" ,
		delete_date AS "deleteDate" 
	</sql>
	
	<sql id="where">
		<trim prefix="WHERE" prefixOverrides="AND|OR">		 
			<if test="id != null"> AND id = #{id}  </if>
			<if test="productId != null"> AND product_id = #{productId}  </if>
			<if test="skuId != null"> AND sku_id = #{skuId}  </if>
			<if test="attrNameId != null"> AND attr_name_id = #{attrNameId}  </if>
			<if test="attrValueId != null"> AND attr_value_id = #{attrValueId}  </if>
			<if test="attrNameType != null"> AND attr_name_type = #{attrNameType}  </if>
			<if test="createUserCode != null"> AND create_user_code = #{createUserCode}  </if>
			<if test="createDate != null"> AND create_date = #{createDate}  </if>
			<if test="updateUserCode != null"> AND update_user_code = #{updateUserCode}  </if>
			<if test="updateDate != null"> AND update_date = #{updateDate}  </if>
			<if test="deleteUserCode != null"> AND delete_user_code = #{deleteUserCode}  </if>
			<if test="deleteDate != null"> AND delete_date = #{deleteDate}  </if>
		</trim>	
	</sql>
	
	<sql id="where_old">
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			AND id = #{old_id}
			AND product_id = #{old_productId}
			AND sku_id = #{old_skuId}
			AND attr_name_id = #{old_attrNameId}
			AND attr_value_id = #{old_attrValueId}
			AND attr_name_type = #{old_attrNameType}
			AND create_user_code = #{old_createUserCode}
			AND create_date = #{old_createDate}
			AND update_user_code = #{old_updateUserCode}
			AND update_date = #{old_updateDate}
			AND delete_user_code = #{old_deleteUserCode}
			AND delete_date = #{old_deleteDate}
		</trim>
	</sql>
	
	<sql id="update">
		<set>
			id = #{id},
			product_id = #{productId},
			sku_id = #{skuId},
			attr_name_id = #{attrNameId},
			attr_value_id = #{attrValueId},
			attr_name_type = #{attrNameType},
			create_user_code = #{createUserCode},
			create_date = #{createDate},
			update_user_code = #{updateUserCode},
			update_date = #{updateDate},
			delete_user_code = #{deleteUserCode},
			delete_date = #{deleteDate},
		</set>
	</sql>
	
	<sql id="updateWithoutNull">
		<set>
			<if test="id != null">id = #{id},</if>
			<if test="productId != null">product_id = #{productId},</if>
			<if test="skuId != null">sku_id = #{skuId},</if>
			<if test="attrNameId != null">attr_name_id = #{attrNameId},</if>
			<if test="attrValueId != null">attr_value_id = #{attrValueId},</if>
			<if test="attrNameType != null">attr_name_type = #{attrNameType},</if>
			<if test="createUserCode != null">create_user_code = #{createUserCode},</if>
			<if test="createDate != null">create_date = #{createDate},</if>
			<if test="updateUserCode != null">update_user_code = #{updateUserCode},</if>
			<if test="updateDate != null">update_date = #{updateDate},</if>
			<if test="deleteUserCode != null">delete_user_code = #{deleteUserCode},</if>
			<if test="deleteDate != null">delete_date = #{deleteDate},</if>
		</set>
	</sql>
	
	<sql id="pkwhere">
		<trim prefix="WHERE" prefixOverrides="AND">
			AND id = #{id}
		</trim>
	</sql>
	
	<select id="load"  resultType="ProductAttrDomain">
		SELECT 
		<include refid="columns" />
		FROM t_prd_product_attr
		<include refid="pkwhere" />		
	</select>
	
	<select id="loadDynamic" parameterType="hashmap" resultType="ProductAttrDomain">
		SELECT 		
		<include refid="columns" />
		FROM t_prd_product_attr
		<include refid="where" />
		<if test="_orderby != null">ORDER BY ${_orderby}</if>
	</select>

	<select id="count"  parameterType="hashmap" resultType="integer">
		SELECT count(1) 
		FROM t_prd_product_attr
		<include refid="where" />
	</select>
	
	<select id="countByPK"  resultType="integer">
		SELECT count(1) 
		FROM t_prd_product_attr
		<include refid="pkwhere" />		
	</select>
	
	<insert id="insert"  parameterType="ProductAttrDomain">
		INSERT INTO t_prd_product_attr (			
				id,				
				product_id,				
				sku_id,				
				attr_name_id,				
				attr_value_id,				
				attr_name_type,				
				create_user_code,				
				create_date,				
				update_user_code,				
				update_date,				
				delete_user_code,				
				delete_date				
		)		
		VALUES (	
			#{id},
			#{productId},
			#{skuId},
			#{attrNameId},
			#{attrValueId},
			#{attrNameType},
			#{createUserCode},
			#{createDate},
			#{updateUserCode},
			#{updateDate},
			#{deleteUserCode},
			#{deleteDate}
		) 
	</insert>
	
	<delete id="delete" >
		DELETE FROM t_prd_product_attr
		<include refid="pkwhere" />	
	</delete>
	
	<delete id="deleteDynamic" parameterType="hashmap">
		DELETE FROM t_prd_product_attr
		<include refid="where" />
	</delete>

	<update id="update" parameterType="ProductAttrDomain">
		UPDATE t_prd_product_attr	
		<include refid="update" />
		<include refid="pkwhere" />	
	</update>
	
	<update id="updateWithoutNull" parameterType="ProductAttrDomain">
		UPDATE t_prd_product_attr
		<include refid="updateWithoutNull"/>
		<include refid="pkwhere" />	
	</update>
	
	<update id="updateDynamic" parameterType="hashmap">
		UPDATE t_prd_product_attr	
		<include refid="update" />
		<include refid="where_old" />
	</update>
	
	<select id="loadDynamicPaging" parameterType="hashmap" resultType="ProductAttrDomain">
		SELECT 		
		<include refid="columns" />
		FROM t_prd_product_attr
		<include refid="where" />
		<if test="_orderby != null">ORDER BY ${_orderby}</if>
		<if test="_offset != null">LIMIT #{_offset},#{_limit}</if>	
	</select>
</mapper>